<%- include("partials/header.ejs") %>
<body>
  <div class = "header">
  <h1>Quotes Found </h1>
  </div>
  <div class="container"><% for (i of quotes) { %>
    <div class="quoteEntry"><%= i.quote %> <br>
      <em>
        - <a href="#" id="<%=i.authorId%>">
           <%= i.firstName%> <%=i.lastName%> 
          </a>
      </em>  
      <div class="hr"><hr class="separator"></div><br>
    </div>
  <% } %>
  </div>
      <!-- Modal -->
      <div id="authorModal" class="modal fade" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title">Author Information</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div id="authorInfo"></div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>

  <%- include("partials/footer.ejs")%>
<script src="/js/scripts.js"></script>
</body>
</html>